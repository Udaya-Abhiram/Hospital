<!DOCTYPE html>
<html lang="en">
<head>
  <title>Patient Registration</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/patientregister.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <script src="/javascripts/angular.js"></script>
</head>
<body ng-app="myapp" ng-controller="mycntrl" name="myForm" novalidate>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
                <h2>Patient Registration</h2>
                <br>
                <form class="card">
                    <div class="form-group">
                        <label for="firstname">FirstName</label>
                        <input type="text" class="form-control" id="firstname" placeholder="Enter FirstName" name="firstname" ng-model="patient.firstname">
                    </div>

                    <div class="form-group">
                        <label for="lastname">LastName</label>
                        <input type="text" class="form-control" id="lastname" placeholder="Enter LastName" name="lastname" ng-model="patient.lastname">
                    </div>

                    <div class="form-group">
                        <label for="Gender">Gender</label>
                        <select class="form-control" id="gender" ng-model="patient.gender">
                        <option>Male</option>
                        <option>Female</option>
                        <option>Prefer Not to Say</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="age">Age</label>
                        <input type="number" class="form-control" id="age" placeholder="Enter Age" name="age" ng-model="patient.age">
                    </div>

                    <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" ng-model="patient.email">
                    <span ng-show="myForm.email.$error.email">Invalid email address.</span>
                    </div>

                    <div class="form-group">
                    <label for="pwd">Password</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd" ng-model="patient.pwd">
                    <!-- <span style="color:red" ng-show="myForm.pwd.$dirty && myForm.user.$invalid">
                    <span ng-show="myForm.pwd.$error.required">Password is required.</span> -->
                    </div>

                    <div class="form-group">
                        <label for="cpwd">Confirm Password</label>
                        <input type="password" class="form-control" id="cpwd" placeholder="Enter password" name="cpwd" compare-to="pwd" ng-model="patient.cpwd">
                        <!-- <span style="color:red" ng-show="myForm.cpwd.$dirty && myForm.cpwd.$invalid">
                        <span ng-show="myForm.cpwd.$error.required">Password is required.</span> -->
                        <!-- <span class="error" ng-show="myForm.pwd.$error.compareTo">  
                            Passwords don't match.  
                         </span>    -->
                    </div>

                    <div class="form-group">
                        <label for="address">Address</label>
                        <textarea class="form-control" rows="5" id="address" ng-model="patient.address"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                    <button class="btn btn-default but" ng-click="postData(patient)">Register</button>
                    <div class="col-md-4"></div>
                    </div>
                    </div>
                </form>
                <!-- ng-disabled="myForm.user.$dirty && myForm.user.$invalid ||  
                    myForm.email.$dirty && myForm.email.$invalid" -->
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

</body>
</html>
